{
  "name": "wasm-playground",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "cmake --build build --parallel",
    "test": "npm run build && ASAN_OPTIONS=detect_leaks=0 ctest --test-dir build --output-on-failure",
    "linter": "find src -regex '.*\\.\\(cpp\\|hpp\\|c\\|h\\)' -not -path '**/kaitai/**' | xargs clang-format -style=file:.clang-format --Werror --dry-run",
    "kaitai": "kaitai-struct-compiler --target cpp_stl --outdir src/kaitai src/kaitai/webassembly.ksy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/henrythasler/wasm-playground.git"
  },
  "keywords": [
    "wasm"
  ],
  "author": "Henry Thasler",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/henrythasler/wasm-playground/issues"
  },
  "homepage": "https://github.com/henrythasler/wasm-playground#readme"
}
